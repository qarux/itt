{
  "compilerOptions": {
    "rootDir": "./packages",
    "outDir": "./built",
    "module": "node16",
    "target": "es2021",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true
  }
}
